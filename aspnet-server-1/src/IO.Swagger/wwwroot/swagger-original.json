{
  "openapi" : "3.0.3",
  "info" : {
    "title" : "DeadCrumbs API",
    "description" : "This is the API for for the DeadCrumbs application.",
    "version" : "1"
  },
  "servers" : [ {
    "url" : "/"
  } ],
  "paths" : {
    "/Users" : {
      "get" : {
        "summary" : "returns all user as a list",
        "operationId" : "getUsers",
        "responses" : {
          "200" : {
            "description" : "a JSON array of users",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/user"
                  },
                  "x-content-type" : "application/json"
                }
              }
            }
          }
        }
      }
    },
    "/User/{username}" : {
      "get" : {
        "summary" : "return the user",
        "operationId" : "getUser",
        "parameters" : [ {
          "name" : "username",
          "in" : "path",
          "description" : "The username of the user.",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "a user represented as json",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/user"
                }
              }
            }
          }
        }
      }
    },
    "/Location/{username}" : {
      "get" : {
        "summary" : "returns the location associated with username",
        "operationId" : "getLocation",
        "parameters" : [ {
          "name" : "username",
          "in" : "path",
          "description" : "The username of the user.",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "a JSON object of a location",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/location"
                }
              }
            }
          },
          "400" : {
            "description" : "retrival of location went wrong"
          },
          "404" : {
            "description" : "no device with that id"
          }
        }
      }
    },
    "/Location" : {
      "post" : {
        "summary" : "adds a new location",
        "operationId" : "postLocation",
        "requestBody" : {
          "$ref" : "#/components/requestBodies/location"
        },
        "responses" : {
          "201" : {
            "description" : "location added successfully"
          },
          "400" : {
            "description" : "location added unsuccessfully"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "user" : {
        "required" : [ "mac_address", "username" ],
        "type" : "object",
        "properties" : {
          "username" : {
            "type" : "string",
            "example" : "jacob6565"
          },
          "mac_address" : {
            "type" : "string",
            "format" : "D6:11:A1:23"
          }
        },
        "example" : {
          "mac_address" : "mac_address",
          "username" : "jacob6565"
        }
      },
      "location" : {
        "required" : [ "deviceId", "id", "locationValue" ],
        "type" : "object",
        "properties" : {
          "user_ref" : {
            "type" : "string"
          },
          "yaw" : {
            "type" : "number",
            "format" : "float"
          },
          "position" : {
            "$ref" : "#/components/schemas/position"
          },
          "timestamp" : {
            "type" : "string",
            "format" : "date-time"
          }
        },
        "example" : {
          "position" : {
            "coordinates" : [ 6.0274563, 6.0274563 ],
            "type" : "type"
          },
          "user_ref" : "user_ref",
          "yaw" : 0.8008282,
          "timestamp" : "2000-01-23T04:56:07.000+00:00"
        }
      },
      "position" : {
        "type" : "object",
        "properties" : {
          "type" : {
            "type" : "string"
          },
          "coordinates" : {
            "type" : "array",
            "items" : {
              "type" : "number",
              "format" : "float"
            }
          }
        },
        "example" : {
          "coordinates" : [ 6.0274563, 6.0274563 ],
          "type" : "type"
        }
      }
    },
    "parameters" : {
      "username" : {
        "name" : "username",
        "in" : "path",
        "description" : "The username of the user.",
        "required" : true,
        "style" : "simple",
        "explode" : false,
        "schema" : {
          "type" : "string"
        }
      }
    },
    "requestBodies" : {
      "location" : {
        "description" : "a JSON object of a location",
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/location"
            }
          }
        },
        "required" : true
      }
    }
  }
}
